    \else
        \begin{textblock*}{\paperwidth}(0.8\paperwidth,0.910\paperheight)
            {\includegraphics[width=0.12\paperwidth,keepaspectratio]{pl_logo_2022.png}}
        \end{textblock*}

        \begin{textblock*}{\paperwidth}(0.05\paperwidth,0.924\paperheight)
                \begin{beamercolorbox}{framenumber}
                        \usebeamerfont{framenumber}\insertpagenumber%
                \end{beamercolorbox}%
        \end{textblock*}

        \vskip0.3in%
    \fi
}


