% Frame title
\defbeamertemplate*{frametitle}{pl-2022}[1][] {
      \@tempdima=\textwidth%
      \advance\@tempdima by\beamer@leftmargin%
      \advance\@tempdima by\beamer@rightmargin%
      \begin{beamercolorbox}[sep=0.08\paperheight,#1,wd=\the\@tempdima]{frametitle}
          \usebeamerfont{frametitle}%
          \strut\insertframetitle\par%
      \end{beamercolorbox}%
}

