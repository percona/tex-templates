% Frame title
\defbeamertemplate*{frametitle}{pl-2023}[1][pl-2023alert] {
	\begin{textblock*}{\paperwidth}(0pt,0pt)
		\tikz[remember picture,overlay] {%
			\fill[#1](0\paperwidth,-1\paperheight) rectangle (0.02\paperwidth,0\paperheight);
		}
    \end{textblock*}

	\begin{textblock*}{0.98\paperwidth}(0.04\paperwidth,0.04\paperheight)
		\begin{beamercolorbox}[left, wd=0.98\paperwidth]{frametitle}
			\usebeamerfont{title in head/foot}\insertframetitle
		\end{beamercolorbox}%
	\end{textblock*}
}

